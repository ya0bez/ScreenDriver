		Иначе
			ЗаписьXML.ЗаписатьАтрибут(ЭлементКоллекции.Ключ, XMLСтрока(ЭлементКоллекции.Значение));
		КонецЕсли; 
	КонецЦикла;
	ЗаписьXML.ЗаписатьКонецЭлемента();
	
